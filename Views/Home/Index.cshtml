@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido</h1>
    <p>¡Aquí usted puede encontrar la mascota que siempre deseó!</p>

    <div class="row justify-content-center">

        <div class="bd-example">

            <div id="carruselMascotas" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carruselMascotas" data-slide-to="0" class="active"></li>
                    <li data-target="#carruselMascotas" data-slide-to="1"></li>
                    <li data-target="#carruselMascotas" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/img/perroygato.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/perro.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/gato.jpg" class="d-block w-100">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carruselMascotas" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </a>
                <a class="carousel-control-next" href="#carruselMascotas" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </a>
            </div>
            


        </div>

        <div class="text-center">
            <a class="btn btn-success" asp-controller="Contacto" asp-action="Index">¡Regístrese para adoptar una mascota!</a>
        </div>

    </div> 



</div>
